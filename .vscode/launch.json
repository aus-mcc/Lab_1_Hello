    "version": "0.2.0",
    "configurations": [
        { 
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/hello",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hello",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "linux":{
                "MIMode": "lldb"
            }
           
        },
    ]
}